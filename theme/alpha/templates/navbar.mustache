<script>
(function(){
  // Make the correct tab active on page load (matches lower nav behavior)
  var links = document.querySelectorAll('a[data-role="alpha2-nav-link"]');
  if (!links.length) return;

  function setActive(el){
    // Reset all to non-active look
    links.forEach(function(a){
      a.style.color = '#111';
      a.style.fontWeight = '500';
      a.style.borderBottomColor = 'transparent';
    });
    // Apply active look
    el.style.color = '#e53935';
    el.style.fontWeight = '500';
    el.style.borderBottomColor = '#fe2e0c';
  }

  // Pick active based on current path
  var here = window.location.pathname.replace(/\/+$/,''); // trim trailing slash
  var matched = null;
  links.forEach(function(a){
    var url = new URL(a.href, window.location.origin);
    var path = url.pathname.replace(/\/+$/,'');
    if (path === here) { matched = a; }
  });

  if (matched) {
    setActive(matched);
  } else {
    // Fallback to Home if nothing matches
    setActive(links[0]);
  }

  // Optional: visual feedback before navigation (not required)
  links.forEach(function(a){
    a.addEventListener('click', function(){ setActive(a); });
  });
})();
</script>



