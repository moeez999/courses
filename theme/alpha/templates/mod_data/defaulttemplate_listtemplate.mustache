{{!
    @template mod_data/defaulttemplate_listtemplate

    Default template for the list view page in the database activity.

    Context variables required for this template:
    * fields - The database fields to display

    Example context (json):
    {
        "fields": [
            {
                "fieldname": "Field1",
                "fieldcontent": "[[Field1]]"
            },
            {
                "fieldname": "Field2",
                "fieldcontent": "[[Field2]]"
            }
        ]
    }
}}
<div class="defaulttemplate-listentry my-3 p-3 card">
    <div class="row my-1">
        <div class="col-auto">##userpicture##</div>
        <div class="col">
            <div class="row h-100">
                <div class="col-3 align-self-center">
                    <span class="rui-text--weight-medium mt-2 mb-3">##user##</span><br />
                    <span class="data-timeinfo badge-xs badge-light">##timeadded##</span>
                    <div class="data-timeinfo">
                        <span class="badge-xs badge-light">{{#str}}datemodified, mod_data{{/str}}&nbsp;##timemodified##</span>
                    </div>
                </div>

                <div class="col-4 col-md-3 ml-auto align-self-center d-flex flex-row-reverse">
                    <div>##actionsmenu##</div>
                    <div class="ml-auto my-auto ##approvalstatusclass##">##approvalstatus##</div>
                </div>
            </div>
        </div>
    </div>
    <hr />

    <div class="defaulttemplate-list-body">
        {{#fields}}
            <div class="row my-3 align-items-start justify-content-start">
                <div class="col-4 col-lg-3 text-right"><label>{{fieldname}}</label></div>
                <div class="col-8 col-lg-9 ml-auto">{{fieldcontent}}</div>
            </div>
        {{/fields}}
        {{#tags}}
        <div class="mt-2 text-right">{{.}}</div>
        {{/tags}}
    </div>
</div>