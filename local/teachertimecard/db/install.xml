<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/teachertimecard/db" VERSION="2024082300" COMMENT="Teacher Time Card">
  <TABLES>
    <TABLE NAME="local_teachertimecard_rates" COMMENT="Teacher hourly rates configuration">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="group_rate" TYPE="number" LENGTH="6" DECIMALS="2" NOTNULL="true" DEFAULT="0.00" SEQUENCE="false"/>
        <FIELD NAME="single_rate" TYPE="number" LENGTH="6" DECIMALS="2" NOTNULL="true" DEFAULT="0.00" SEQUENCE="false"/>
        <FIELD NAME="effective_from" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="effective_to" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="created_single_by" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="created_group_by" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="teacherid_fk" TYPE="foreign" FIELDS="teacherid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="created_single_by_fk" TYPE="foreign" FIELDS="created_single_by" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="created_group_by_fk" TYPE="foreign" FIELDS="created_group_by" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="effective_dates_idx" UNIQUE="false" FIELDS="effective_from, effective_to"/>
        <INDEX NAME="teacherid_idx" UNIQUE="false" FIELDS="teacherid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_teachertimecard_notes" COMMENT="Teacher timecard notes">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="date" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="note" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="created_by" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="teacherid_fk" TYPE="foreign" FIELDS="teacherid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="created_by_fk" TYPE="foreign" FIELDS="created_by" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="teacherid_date_idx" UNIQUE="false" FIELDS="teacherid, date"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_teachertimecard_paid_sessions" COMMENT="Sessions that have been paid">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="payment_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="session_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="session_date" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="session_type" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="duration" TYPE="number" LENGTH="5" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="rate" TYPE="number" LENGTH="6" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="number" LENGTH="8" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="payment_id_fk" TYPE="foreign" FIELDS="payment_id" REFTABLE="local_teachertimecard_payments" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="payment_id_idx" UNIQUE="false" FIELDS="payment_id"/>
        <INDEX NAME="session_id_idx" UNIQUE="false" FIELDS="session_id"/>
        <INDEX NAME="session_type_idx" UNIQUE="false" FIELDS="session_type"/>
        <INDEX NAME="session_date_idx" UNIQUE="false" FIELDS="session_date"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_teachertimecard_payments" COMMENT="Teacher payment records">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="number" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="currency" TYPE="char" LENGTH="3" NOTNULL="true" DEFAULT="USD" SEQUENCE="false"/>
        <FIELD NAME="payment_method" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="period_start" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="period_end" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sessions_included" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" SEQUENCE="false"/>
        <FIELD NAME="created_by" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="teacherid_fk" TYPE="foreign" FIELDS="teacherid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="created_by_fk" TYPE="foreign" FIELDS="created_by" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="teacherid_idx" UNIQUE="false" FIELDS="teacherid"/>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="period_idx" UNIQUE="false" FIELDS="period_start, period_end"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_teachertimecard_rm" COMMENT="Removed sessions records">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="session_id" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="" SEQUENCE="false"/>
        <FIELD NAME="date" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="" SEQUENCE="false"/>
        <FIELD NAME="duration" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="attendance" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="student_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="payable" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="Yes" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="-" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="teacherid_idx" UNIQUE="false" FIELDS="teacherid"/>
        <INDEX NAME="date_idx" UNIQUE="false" FIELDS="date"/>
        <INDEX NAME="session_id_idx" UNIQUE="false" FIELDS="session_id"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>